<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:foregroundTint="#ECE2E2"
    android:outlineSpotShadowColor="#000000">

    <TextView
        android:id="@+id/textViewStockName"
        android:layout_width="81dp"
        android:layout_height="50dp"
        android:text="Stock's name"
        android:textAlignment="viewStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="20sp"/>

    <TextView
        android:textSize="20sp"
        android:id="@+id/textViewBoughtPrice"
        android:layout_width="82dp"
        android:layout_height="50dp"
        android:text="Bought Price"
        android:textAlignment="textStart"
        app:layout_constraintStart_toEndOf="@+id/textViewStockName"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:textSize="20sp"
        android:id="@+id/textViewChangeAmount"
        android:layout_width="102dp"
        android:layout_height="50dp"
        android:text="Change amount"
        android:textAlignment="viewStart"
        app:layout_constraintStart_toEndOf="@+id/textViewBoughtPrice"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:textSize="20sp"
        android:id="@+id/textViewVolumn"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:text="Volumn"
        android:textAlignment="viewStart"
        app:layout_constraintStart_toEndOf="@+id/textViewChangeAmount"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="71dp"
        android:layout_height="50dp"
        android:background="@drawable/round_button"
        android:backgroundTint="@android:color/white"
        android:text="Alert"
        android:textAlignment="center"
        android:textSize="10sp"
        app:iconTint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textViewVolumn"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>